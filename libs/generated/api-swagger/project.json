{
  "name": "api-swagger",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "outputs": [
        "libs/generated/api-swagger"
      ]
    },
    "codegen": {
      "executor": "@nx-dotnet/core:openapi-codegen",
      "options": {
        "useOpenApiGenerator": true,
        "openApiGenerator": "typescript",
        "openapiJsonPath": "libs/generated/api-swagger",
        "outputProject": "generated-api-types"
      },
      "dependsOn": [
        "swagger"
      ],
      "inputs": [
        "{projectRoot}/libs/generated/api-swagger"
      ],
      "outputs": [
        "{workspaceRoot}"
      ]
    }
  },
  "implicitDependencies": [
    "api"
  ]
}
